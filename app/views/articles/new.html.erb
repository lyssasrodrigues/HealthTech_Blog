<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="col-md-4">

    <div class="card shadow-lg border-0" style="border-radius: 15px;">
      <div class="card-body p-4">

        <h2 class="text-center fw-bold mb-4 text-primary">Login</h2>

        <%= form_with(url: session_path(resource_name), scope: resource_name, local: true) do |f| %>

          <div class="mb-3">
            <%= f.label :email, "E-mail", class: "form-label fw-semibold" %>
            <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: "seu@email.com" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Senha", class: "form-label fw-semibold" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "••••••••" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Lembrar de mim", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit "Entrar", class: "btn btn-primary btn-lg fw-bold" %>
          </div>

        <% end %>

        <hr class="my-4">

        <div class="text-center">
          <%= link_to "Criar conta", new_registration_path(resource_name), class: "text-decoration-none fw-semibold" %><br>
          <%= link_to "Esqueci minha senha", new_password_path(resource_name), class: "text-decoration-none text-muted" %>
        </div>

      </div>
    </div>

  </div>
</div>
