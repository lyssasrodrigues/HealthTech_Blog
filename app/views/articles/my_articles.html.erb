<h1 class="mb-4">Meus Artigos</h1>

<% if @articles.any? %>
  <div class="row g-4">
    <% @articles.each do |article| %>
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article %></h5>
            <p class="text-muted"><%= truncate(article.summary, length: 100) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>Você ainda não escreveu nenhum artigo.</p>
<% end %>
